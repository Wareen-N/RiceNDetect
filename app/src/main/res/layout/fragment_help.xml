<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_help"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/smoothcorner"
    android:elevation="4dp"
    android:padding="12dp"
    tools:context=".Help">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/varelaregular"
            android:text="HELP"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_howAddField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="#2E7D32"
            android:fontFamily="@font/varelaregular"

            android:padding="10dp"
            android:text="How to add field"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btneditfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="#2E7D32"
            android:fontFamily="@font/varelaregular"
            android:padding="10dp"
            android:text="how to edit field"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btndeletefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="#2E7D32"
            android:fontFamily="@font/varelaregular"
            android:padding="10dp"
            android:text="How to delete field"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnusefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="#2E7D32"
            android:fontFamily="@font/varelaregular"

            android:padding="10dp"
            android:text="how to use 'field'"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnquickidentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="#2E7D32"
            android:fontFamily="@font/varelaregular"
            android:padding="10dp"
            android:text="how to use 'quick identify'"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>